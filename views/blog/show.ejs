<% layout( './layouts/boilerplate' ) %>

<p><%=success %></p>
<p><%=error %></p>

<div class="show">
   <h1><%= blog.title %></h1>
            
    <% blog.images.forEach((img, i)=>{ %>  
        <img src="<%=img.url%>" alt="">
    <% }) %> 
   

    <p><%= blog.body %></p>
    <span>Written by: <%=blog.user.username %></span>


    <%if (currentUser && blog.user.equals(currentUser._id)){ %>
        <div class="links">
            <a class="hover" href="/blog/<%=blog._id%>/edit">Edit </a>
            <form action="/blog/<%=blog._id%>?_method=DELETE" method="POST">
                <button class="hover">Delete</button>
            </form>
        </div>
    <% } %>

</div>

