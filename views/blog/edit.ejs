<% layout( './layouts/boilerplate' ) %>
  
    <h2>here is your form</h2>

    <form action="/blog/<%=blog._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
        <label for="title">Title</label>

        <input type="text" name="title" placeholder="Title" id="title" value="<%=blog.title%>" required>

        <label for="body">Content</label>
        <textarea name="body" id="body" cols="30" rows="3" placeholder="enter your message" required><%=blog.body %></textarea>

        <input type="file" name="image" multiple/>

        <%blog.images.forEach(function(img, i){ %>
            <img src="<%=img.url%>" alt="">
            <input type="checkbox" name= "deleteImages[]" id="image-<%=i%>" value="<%=img.filename%>">
            <label for="image-<%=i%>">delete</label>
        <% }) %>

        <button>Done</button>
       
    </form>

